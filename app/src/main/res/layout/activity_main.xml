<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.csclab.hc.androidpratice.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="numberSigned"
        android:height="50dp"
        android:nestedScrollingEnabled="false"
        android:minWidth="100dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num2"
        android:height="50dp"
        android:nestedScrollingEnabled="false"
        android:minWidth="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="numberSigned"
        android:layout_marginLeft="157dp"
        android:layout_marginStart="157dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/plus"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/num1"
        android:layout_alignEnd="@+id/num1"
        android:layout_marginTop="53dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/minus"
        android:layout_alignTop="@+id/plus"
        android:layout_toRightOf="@+id/num1"
        android:layout_toEndOf="@+id/num1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/times"
        android:layout_marginTop="155dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/plus"
        android:layout_alignStart="@+id/plus" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/mol"
        android:layout_alignTop="@+id/times"
        android:layout_toRightOf="@+id/times"
        android:layout_toEndOf="@+id/times" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clean"
        android:id="@+id/c"
        android:layout_alignTop="@+id/mol"
        android:layout_toRightOf="@+id/num2"
        android:layout_toEndOf="@+id/num2" />

</RelativeLayout>
